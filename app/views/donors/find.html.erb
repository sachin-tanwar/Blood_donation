 <div class="container">

 	<%= render partial: 'donors/header' %>

 	<div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Find Donors </h1>
                
            </div>
    </div>

    	<div class="panel panel-primary boxShadow" style=" font-size:16px">

                <div class="panel-heading">
                    <h3 class="panel-title"><b>Find a Blood Donor</b></h3>
                </div>

                <div class="panel-body" align="left" style="min-height: 220px; max-height: 200px;">

                <%= form_tag find_path , method: :get do %>
                  
                 <p> <%= label_tag :blood_group %><br />
                  <%= select_tag (:blood_group), options_for_select(%w[ A+ B+ O+ AB+ A- B- O- AB-]) %> </p>
                  
                 <p> <%= label_tag :area %><br />
                  <%= select_tag (:area), options_for_select(%w[Indore Vijay_Nagar Bhawar_Kuwa Rajendra_Nagar Geeta_Bhawan Aerodram Tejaji_Nagar Raj_Mohalla Rajwada Chandan_Nagar Gandhi_Nagar Arvindo MY Bombay_Hospital]) %> </p> 
                  
                  
                  <%= submit_tag "Search" , class: "btn btn-primary" , name: nil %>
                <% end %>

                
                       
                                                             
                </div>
                

            </div>

       <h1>All Donors</h1>


      <% if @donors.nil?  %>
          <h4> No record found</h4>
          <% else %>
    			<% for donor in @donors %>

    			    <li>
    			        <h3>Name : <%= donor.name %></h3>
    			        <h4><p>Blood Group : <%= donor.blood_group %></p></h4>
    					<h4><p>Contact no : <%= donor.phone_no %></p></h4>
    			        <h4><p>Contact no 2: <%= donor.phone_no2 %></p></h4>		
    					<h4><p>Area : <%= donor.area %></p></h4>
    			        <h4><p>Address : <%= donor.address %></p></h4>
    					<h4><p>Message : <%= donor.message %></p></h4>
    			    </li>
    			    <hr>

    			<% end %>

          <%end %>


	
			
			<hr>

	<%= render partial: 'donors/footer' %>

</div>