 <div class="container">

 	<%= render partial: 'donors/header' %>

 	  <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">Donors having Bloodgroup : "<%= params[:blood_group] %>" and Area :" <%= params[:area]%>" </h2> 

                
            </div>
    </div>

    	
         <% if @donors.present?  %>         
           
          <table class="table table-hover">

                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Contact no 1</th>
                    <th>Contact no 2</th>
                    <th>Address</th>
                    <th>Message</th>
                  </tr>
                </thead>

                <tbody>
                                   
                      <% for donor in @donors %>
                        <tr>
                          <td><%= donor.name %></td>
                          <td><%= donor.phone_no %></td>
                          <td><%= donor.phone_no2 %></td>
                          <td><%= donor.address %></td>
                          <td><%= donor.message %></td>
                        </tr>

                      <% end %>

                </tbody>

           </table>

         <% else %>

          <h3> &nbsp &nbsp Sorry!!!! No record found</h3>

          <%end %>

   <br>    




          <h3><%= link_to "<< Search Again with different Blood group and Area", donors_path %></h3>


	
			
			<hr>

	<%= render partial: 'donors/footer' %>

</div>